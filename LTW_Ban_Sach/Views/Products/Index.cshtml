@model List<LTW_Ban_Sach.Models.Books>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="d-flex" style="width: 100%; ">

    <hr style="width: calc(100% - 400px); margin-top:25px;" />
    <div style="background-image: var(--gradient-tech); border-radius: 10px; width: 400px; height: 50px;">
        <h2 style="text-align: center; color: white; line-height: 50px;">Book List</h2>
    </div>
</div>
<div class="row row-cols-5 row-gap-4 mt-4 align-items-center">
    @foreach (var b in Model)
    {
        <div class="items">
            <div class="position-relative"
                 style="width: 100%;
                height: 380px;
                margin-right: 20px;
                background-color: white;
                border-radius: 10px;
                box-shadow: 0 6px 10px rgba(0, 0, 0, 0.4)">
                <img style="width: 100%; height: 280px; border-radius: 10px 10px 0 0;" src="~/Content/Image/@b.mainImage" />
                <p style="color: rgba(10,25,47,0.9); text-align:center; font-weight: 500; font-size: 18px; margin-top: 10px;">
                    @b.BookName
                </p>
                <p style="color: red; text-align: center; margin-top: -10px">@b.Price VND</p>
            </div>
        </div>
    }

</div>
